docker {
  enabled = true
  runOptions="-v $baseDir/process_scripts,/data/user/$USER/GOAL/work_dir,/data/user/$USER/GOAL/PIPELINE_INPUT,/data/user/$USER/GOAL/PIPELINE_OUTPUT,/data/user/$USER/GOAL/genome,/data/user/$USER/GOAL/panels,/data/user/$USER/GOAL/snpEff/GRCh37.75:/usr/local/bin/snpEff/data/GRCh37.75"
  cacheDir="/data/user/$USER/.singularity"
}

env {
  TMPDIR='/tmp'
}

params {
  input = "/scratch/GOAL/PIPELINE_INPUT"
  output = "/scratch/GOAL/PIPELINE_OUTPUT"
  genome = "/scratch/GOAL/genome/GOAL_GRCh37"
  capture = "/scratch/GOAL/panels/GOAL_GRCh37/goal_haloplex.bed"
  itdbed = "/scratch/GOAL/panels/GOAL_GRCh37/goal_haloplex_itd.bed"
  reffa = "$params.genome/genome.fa"
  dbsnp = "$params.genome/dbSnp.vcf.gz"
}

process {
  executor = 'sge'

  errorStrategy='retry'
  maxRetries=1

  cpus = 16
  time = 2.h
  memory = 63.GB

  withLabel: trim {
    container = 'goalconsortium/trim_galore:1.1.3'
  }

  withLabel: abra2 {
    container = 'goalconsortium/abra2:1.0.9'
  }

  withLabel: profiling_qc {
    container = 'goalconsortium/profiling_qc:1.1.3'
  }

  withLabel: dnaalign {
    container = 'goalconsortium/dna_alignment:1.0.9'
  }

  withLabel: variantcalling  {
    container = 'goalconsortium/variantcalling:1.1.5'
  }

  withLabel: structuralvariant {
    container = 'goalconsortium/structuralvariant:1.1.4'
  }

  withLabel: pindel {
    container = 'goalconsortium/structuralvariant:1.1.4'
  }
}