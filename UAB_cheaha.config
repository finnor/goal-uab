dataDir = "/data/user/$USER/GOAL"
scriptDir = "$baseDir"
scracthDir = "/scratch/$USER/GOAL/work_dir"

singularity {
  enabled = true
  runOptions="--no-home --cleanenv -B $scriptDir/process_scripts,$scracthDir/GOAL/work_dir,$dataDir/PIPELINE_INPUT,$dataDir/PIPELINE_OUTPUT,$dataDir/genome,$dataDir/panels,$dataDir/snpEff/GRCh37.75:/usr/local/bin/snpEff/data/GRCh37.75"
  cacheDir="/data/user/$USER/.singularity"
}

env {
  TMPDIR='/tmp'
}

params {
  input = "$dataDir/PIPELINE_INPUT"
  output = "$dataDir/PIPELINE_OUTPUT"
  genome = "$dataDir/genome/GOAL_GRCh37"
  capture = "$dataDir/panels/GOAL_GRCh37/goal_core497.hg19.bed"
  itdbed = "$dataDir/panels/GOAL_GRCh37/itd_genes.bed"
  reffa = "$params.genome/genome.fa"
  dbsnp = "$params.genome/dbSnp.vcf.gz"
  startFromBcl = true
}

process {
  executor = 'slurm'
  clusterOptions = '--share --partition=express'

  errorStrategy='retry'
  maxRetries=1

  cpus = 8
  time = 2.h
  memory = 32G

  withLabel: python {
    container = 'python:3.10'
  }

  withLabel: bcl_convert {
    container = 'aflanry/bcl-convert:3.10.5'
  }

  withLabel: trim {
    container = 'goalconsortium/trim_galore:1.1.3'
  }

  withLabel: abra2 {
    container = 'goalconsortium/abra2:1.0.9'
  }

  withLabel: profiling_qc {
    container = 'goalconsortium/profiling_qc:1.1.3'
  }

  withLabel: dnaalign {
    container = 'goalconsortium/dna_alignment:1.0.9'
  }

  withLabel: variantcalling  {
    container = 'goalconsortium/variantcalling:1.1.5'
  }

  withLabel: structuralvariant {
    container = 'goalconsortium/structuralvariant:1.1.4'
  }

  withLabel: pindel {
    container = 'goalconsortium/structuralvariant:1.1.4'
  }
}